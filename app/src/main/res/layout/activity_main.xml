<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.djeezuss.arc_app.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lb_coordZ"
            app:layout_constraintBaseline_toBaselineOf="@+id/tb_coordZ"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/tb_coordZ"
            app:layout_constraintHorizontal_bias="0.5" android:text="Z coordinate"/>
    <TextView
            android:text="X coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lb_coordX"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tb_coordX"
            app:layout_constraintRight_toLeftOf="@+id/tb_coordX" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Y coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lb_coordY"
            app:layout_constraintBaseline_toBaselineOf="@+id/tb_coordY"
            app:layout_constraintRight_toLeftOf="@+id/tb_coordY" android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tb_coordZ"
            android:text="0.00"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tb_coordY"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            android:inputType="numberSigned|numberDecimal"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/tb_coordY"
            android:text="0.00"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tb_coordX"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/tb_coordX"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:text="0.00"
    />
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/bt_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>
