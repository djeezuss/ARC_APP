<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.djeezuss.arc_app.MainActivity">

    <TextView
            android:text="X coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lb_coordX"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/tb_coordX"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/tb_coordX"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/tb_coordX"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="42dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:text="0.00"
    />
</android.support.constraint.ConstraintLayout>
